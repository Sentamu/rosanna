<div class="row">
	<div class="col-md-6">
		<div class="thumbnail">
	<%= image_tag @listing.image.url %>
</div>
	</div>
	<div class="col-md-6">
		<h3><%= @listing.name %></h3>
		<p>
			Price(When Buying): <%= number_to_currency(@listing.sellprice, unit: "UGX  ") %></p>
		<p>
			Price(For Rent): <%= number_to_currency(@listing.rentprice, unit: "UGX  ") %></p>
		<p>
			<strong>Description:</strong>
			<%= @listing.description %></p>
		<br>
		
	</div>
</div>

<%= link_to 'Edit', edit_listing_path(@listing) %> |
<%= link_to 'Back', listings_path %>


